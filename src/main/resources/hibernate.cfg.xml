<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name = "hibernate.dialect">
         org.hibernate.dialect.PostgreSQLDialect
      </property>
      
      <property name = "hibernate.connection.driver_class">
         org.postgresql.Driver
      </property>
      
      <!-- Assume test is the database name -->
      <property name = "hibernate.connection.url"> <!--  this will need to change when we have access to a DB online -->
        <!-- jdbc:postgresql://team-5.cvtq9j4axrge.us-east-1.rds.amazonaws.com:5432/postgres -->
        jdbc:postgresql://localhost:5432/postgres?schema=project1
      </property>
      
      <property name = "hibernate.connection.username">
       <!-- postgres -->
       andrewhughes
      </property>
      
      <property name = "hibernate.connection.password">
        postgres
      </property>
      
      <property name="hibernate.default_schema">project1</property>
     <!--  <property name="hibernate.default_schema">public</property> -->
      
      <!-- CREATE will drop any existing tables and RE-CREATE our tables -->
      <property name="hibernate.hbm2ddl.auto">update</property>
      		
		<!-- UPDATE: wouldn't delete anything, but would add tables or object  -->
		<!-- VALIDATE: best for production checks to make sure that everything in the DB is as expected -->
		<!-- NONE: hibernate doens't alter your schema or do anything -->
      
      <property name="connection.pool_size">10</property>
      
      
      <!--  This will show all of the SQL statemnets that hibernate is generating for us -->
      <property name="hibernate.show_sql">true</property>
      
      <!-- List of persistent classes -->
      <mapping class = "com.revature.models.Employee"/>
      <mapping class = "com.revature.models.ReimbursementStatus"/>
      <mapping class = "com.revature.models.ReimbursementType"/>
      <mapping class = "com.revature.models.UserRole"/>
      <mapping class = "com.revature.models.Employee"/>
      <mapping class = "com.revature.models.User"/>
      <mapping class = "com.revature.models.Reimbursement"/>
      
   </session-factory>
</hibernate-configuration>